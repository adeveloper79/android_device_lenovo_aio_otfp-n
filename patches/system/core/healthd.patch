         gr_fb_blank(false);
+	base::WriteStringToFile("100", BRIGHTNESS_PATH);
+    }
 
     /* draw the new frame (@ cur_frame) */
     redraw_screen(charger);
@@ -632,6 +637,7 @@ static void process_key(struct charger *charger, int code, int64_t now)
                    accordingly. */
